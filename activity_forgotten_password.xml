<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jamesking.choice.Forgotten_Password">


    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/back" />

    <TextView
        android:id="@+id/vID1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vID2OutputTextView"
        android:text="@string/voterID1"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/vID1InputEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vID1TextView"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/sq1Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sq1TextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/sq1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vID1InputEditText"
        android:text="@string/sq1"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/sq1AnswerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/sq2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sq2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/sq1Spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/sq2Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sq2TextView"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/sq2AnswerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/sq1AnswerEditText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/sq2AnswerEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/passwordOutputTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_placeholder"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/passwordTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/request_password" />

    <TextView
        android:id="@+id/answersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sq1AnswerEditText"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/sq1AnswerEditText"
        android:text="@string/answer"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Answers:" />

    <TextView
        android:id="@+id/a1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sq2AnswerEditText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/answersTextView"
        android:layout_toStartOf="@+id/sq1AnswerEditText"
        android:text="@string/answer1"
        android:textAlignment="textStart"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/a2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/a1TextView"
        android:layout_toStartOf="@+id/sq1AnswerEditText"
        android:text="@string/answer2"
        android:textSize="17sp" />

</RelativeLayout>
