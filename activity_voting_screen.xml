<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jamesking.choice.Voting_Screen">


    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/back" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proceed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/onlineUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/username"
        android:textAlignment="viewStart"
        android:textSize="20sp" />

    <Button
        android:id="@+id/againstButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="116dp"
        android:text="Against" />

    <Button
        android:id="@+id/approveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/electionInformationTextView"
        android:text="Approve" />

    <TextView
        android:id="@+id/currentVoteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginButton"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/approveButton"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@+id/voteClarifyTextView"
        android:text="Choice"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/electionInformationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/againstButton"
        android:layout_marginBottom="41dp"
        android:text="TextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/electionNameTextView" />

    <TextView
        android:id="@+id/electionNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usernameTextView"
        android:layout_marginTop="44dp"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/voteClarifyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backButton"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/currentVoteTextView"
        android:layout_toStartOf="@+id/loginButton"
        android:text="Current Vote:"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_alignEnd="@+id/usernameTextView" />

</RelativeLayout>
