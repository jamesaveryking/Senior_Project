<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jamesking.choice.Confirmation_Screen">


    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/logout" />

    <TextView
        android:id="@+id/confirmationTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/confirmation_screen_title"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/confirmationTitleTextView"
        android:layout_marginTop="62dp"
        android:text="@string/username"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/electionNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usernameTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usernameTextView"
        android:layout_marginTop="54dp"
        android:text="@string/election"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/voteCastTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vote"
        android:textSize="25sp"
        android:layout_below="@+id/electionNameTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />

    <TextView
        android:id="@+id/loadedUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/electionNameTextView"
        android:layout_alignParentEnd="true"
        android:text="user goes here"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/loadedElectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loadedVoteTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/electionNameTextView"
        android:layout_toEndOf="@+id/electionNameTextView"
        android:text="election goes here"
        android:textAlignment="textEnd"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/loadedVoteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/voteCastTextView"
        android:layout_alignBottom="@+id/voteCastTextView"
        android:layout_alignParentEnd="true"
        android:text="vote goes here"
        android:textSize="25sp" />

</RelativeLayout>
